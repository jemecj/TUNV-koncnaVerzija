<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientHistory"
    android:background="@drawable/wallpaper">

    <TextView
        android:id="@+id/Naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/podrobna_zgodovina"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="32dp"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/data"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/Naslov"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/callPatient"
        android:background="@drawable/round_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Pokliči pacienta"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/emailDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@id/callPatient"
        android:text="Obvesti osebnega zdravnika"
        android:layout_marginBottom="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>